<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <!-- Light -->
    <font
        android:font="@font/marc_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/marc_light"
        app:fontStyle="normal"
        app:fontWeight="300" />
    
    <!-- Light Italic -->
    <font
        android:font="@font/marc_light_italic"
        android:fontStyle="italic"
        android:fontWeight="300"
        app:font="@font/marc_light_italic"
        app:fontStyle="italic"
        app:fontWeight="300" />
    
    <!-- Regular -->
    <font
        android:font="@font/marc_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/marc_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />
    
    <!-- Italic -->
    <font
        android:font="@font/marc_italic"
        android:fontStyle="italic"
        android:fontWeight="400"
        app:font="@font/marc_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />
    
    <!-- Bold -->
    <font
        android:font="@font/marc_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/marc_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
    
    <!-- Bold Italic -->
    <font
        android:font="@font/marc_bold_italic"
        android:fontStyle="italic"
        android:fontWeight="700"
        app:font="@font/marc_bold_italic"
        app:fontStyle="italic"
        app:fontWeight="700" />
    
</font-family>

